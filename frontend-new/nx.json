{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": { "appsDir": "apps", "libsDir": "libs" },
  "targetDefaults": {
    "build": { "dependsOn": ["^build"], "inputs": ["production", "^production"] },
    "test": { "dependsOn": ["^build"] },
    "lint": { "inputs": ["default", "{workspaceRoot}/.eslintrc.json"] }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": [
      "default",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.ts"
    ]
  },
  "generators": {
    "@nx/angular:application": { "standalone": true, "strict": true },
    "@nx/angular:library": { "standalone": true, "strict": true }
  },
  "defaultProject": "web"
}
